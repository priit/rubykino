= form_for(video) do |f|
  - if video.errors.any?
    #error_explanation
      %h2
        = pluralize(video.errors.count, "error")
        prohibited this video from being saved:
      %ul
        - video.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    = f.text_field :title, :required => true
  .field
    = f.label :url, 'Url'
    = f.text_field :url, :required => true, :url => true
  .actions
    = f.submit 'Suggest a new video'
